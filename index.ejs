<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dokumentasi Donghua API</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
        }
        .nav-link.active {
            background-color: #e0f2fe;
            color: #0c4a6e;
            font-weight: 600;
        }
        .endpoint-card.active {
            border-color: #38bdf8;
            box-shadow: 0 4px 14px rgba(56,189,248,.2);
        }
        .method-badge {
            font-size: .8rem;
            font-weight: 700;
            padding: .2rem .6rem;
            border-radius: .5rem;
            text-transform: uppercase;
        }
        .method-get {
            background: #dcfce7;
            color: #166534;
        }

        /* Toast Notification */
        #toast {
            position: fixed;
            top: 20px;
            right: 20px;
            background: #0f172a;
            color: #fff;
            padding: 12px 18px;
            border-radius: 10px;
            opacity: 0;
            transform: translateY(-20px);
            transition: all .3s ease;
            z-index: 9999;
            pointer-events: none;
        }
        #toast.show {
            opacity: 1;
            transform: translateY(0);
        }

        /* Loading Screen */
        #loading-screen {
            position: fixed;
            inset: 0;
            background: #f8fafc;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 99999;
            transition: opacity .5s ease;
        }
        .loader {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background: radial-gradient(circle, #38bdf8, #0ea5e9, #0369a1);
            animation: pulse 1.5s infinite ease-in-out;
            filter: blur(1px);
        }
        @keyframes pulse {
            0% { transform: scale(0.7); opacity: .6; }
            50% { transform: scale(1); opacity: 1; }
            100% { transform: scale(0.7); opacity: .6; }
        }
    </style>
</head>

<body class="text-slate-800">

<!-- Loading Screen -->
<div id="loading-screen">
    <div class="loader"></div>
</div>

<!-- Toast Notification -->
<div id="toast"></div>

<div class="container mx-auto p-4 md:p-8">
    
    <!-- NEW HEADER -->
    <header class="text-center mb-12 select-none">
        <div class="inline-block px-10 py-6 rounded-2xl shadow-xl bg-white border border-slate-200"
             style="background: linear-gradient(135deg, #ffffff, #f0f9ff, #e0f2fe); box-shadow: 0 8px 30px rgba(14,165,233,0.15);">
            <h1 class="text-4xl font-extrabold bg-gradient-to-r from-sky-600 to-cyan-500 bg-clip-text text-transparent">
                Dokumentasi Donghua API
            </h1>
            <p class="text-slate-500 mt-2">
                Free Donghua Scraper API â€” Real-time data extraction
            </p>
        </div>
    </header>

    <div class="flex flex-col md:flex-row gap-8">

        <!-- Sidebar -->
        <aside class="w-full md:w-1/4 lg:w-1/5">
            <h2 class="text-lg font-semibold mb-4 text-slate-900">Layanan API</h2>
            <nav id="service-nav" class="flex flex-col space-y-2"></nav>
        </aside>

        <!-- Endpoint List -->
        <main class="w-full md:w-1/2 lg:w-2/5 flex-grow">
            <div id="endpoints-container"></div>
        </main>

        <!-- Example Panel -->
        <aside class="w-full md:w-1/3 lg:w-2/5">
            <div id="example-panel" class="sticky top-8 bg-white p-6 rounded-xl shadow-lg border border-slate-200">
                <h2 class="text-lg font-semibold mb-4 text-slate-900">Contoh Penggunaan</h2>
                <div id="example-content" class="space-y-4">
                    <p class="text-slate-500">Pilih salah satu endpoint untuk melihat contohnya.</p>
                </div>
            </div>
        </aside>

    </div>
</div>


<script>
    const base = window.location.origin;

    const apiData = {
        anichin: {
            name: "Donghua",
            endpoints: [
                {
                    title: "Swiper Slide",
                    description: "Mengambil daftar gambar slide utama.",
                    method: "GET",
                    path: "/slide",
                    params: [],
                    example: `${base}/slide`
                },
                {
                    title: "Popular Today",
                    description: "Mengambil daftar donghua populer hari ini.",
                    method: "GET",
                    path: "/popular",
                    params: [],
                    example: `${base}/popular`
                },
                {
                    title: "Latest Release",
                    description: "Mengambil rilis terbaru dengan pagination.",
                    method: "GET",
                    path: "/latest?page=1",
                    params: [
                        { name: "page", type: "number", required: false, desc: "Halaman data. Default: 1" }
                    ],
                    example: `${base}/latest?page=1`
                },
                {
                    title: "Detail Donghua",
                    description: "Mengambil detail lengkap donghua.",
                    method: "GET",
                    path: "/detail/:slug",
                    params: [
                        { name: "slug", type: "string", required: true, desc: "Slug donghua (contoh: soul-land)" }
                    ],
                    example: `${base}/detail/soul-land`
                },
                {
                    title: "Episode Player",
                    description: "Mengambil data video player.",
                    method: "GET",
                    path: "/episode/:slug",
                    params: [
                        { name: "slug", type: "string", required: true, desc: "Slug episode (contoh: martial-master-episode-1)" }
                    ],
                    example: `${base}/episode/martial-master-episode-1`
                },
                {
                    title: "Search Donghua",
                    description: "Mencari donghua berdasarkan kata kunci.",
                    method: "GET",
                    path: "/search?q=martial master",
                    params: [
                        { name: "q", type: "string", required: true, desc: "Kata kunci pencarian" },
                        { name: "page", type: "number", required: false, desc: "Pagination. Default: 1" }
                    ],
                    example: `${base}/search?q=martial master&page=1`
                },
                {
                    title: "Schedule",
                    description: "Mengambil jadwal rilis donghua hari ini.",
                    method: "GET",
                    path: "/schedule",
                    params: [],
                    example: `${base}/schedule`
                }
            ]
        }
    };


    // -------------------- UI Rendering --------------------
    const serviceNav = document.getElementById('service-nav');
    const endpointsContainer = document.getElementById('endpoints-container');
    const exampleContent = document.getElementById('example-content');

    const toast = document.getElementById('toast');

    function showToast(text) {
        toast.innerText = text;
        toast.classList.add("show");

        setTimeout(() => toast.classList.remove("show"), 2500);
    }

    let currentService = "anichin";

    function renderNav() {
        serviceNav.innerHTML = "";
        Object.keys(apiData).forEach(key => {
            const s = apiData[key];
            const link = document.createElement("a");
            link.className = `nav-link px-4 py-2 rounded-lg hover:bg-slate-100 transition ${key === currentService ? 'active' : ''}`;
            link.textContent = s.name;
            link.onclick = e => { e.preventDefault(); switchService(key); };
            serviceNav.appendChild(link);
        });
    }

    function renderEndpoints() {
        endpointsContainer.innerHTML = "";
        const service = apiData[currentService];

        const header = document.createElement("h2");
        header.className = "text-2xl font-bold mb-6";
        header.textContent = `${service.name} Endpoints`;
        endpointsContainer.appendChild(header);

        service.endpoints.forEach((ep, i) => {
            const card = document.createElement("div");
            card.className =
                "endpoint-card bg-white p-5 rounded-lg border-2 border-transparent hover:border-sky-300 cursor-pointer transition-all mb-4";
            card.onclick = () => showExample(currentService, i);

            let paramsHTML = "";
            if (ep.params.length > 0) {
                paramsHTML = `
                    <h4 class="font-semibold mt-3 mb-1">Parameters:</h4>
                    <ul class="text-sm list-disc list-inside space-y-1">
                        ${ep.params
                            .map(
                                (p) =>
                                    `<li><code class="bg-slate-200 px-1 py-0.5 rounded">${p.name}</code> (${p.type}) - ${p.desc}</li>`
                            )
                            .join("")}
                    </ul>`;
            }

            card.innerHTML = `
                <div class="flex justify-between">
                    <div class="font-semibold text-lg">${ep.title}</div>
                    <span class="method-badge method-get">${ep.method}</span>
                </div>

                <p class="text-sm text-slate-500 mt-1">${ep.description}</p>

                <code class="block bg-slate-100 mt-3 py-1 px-2 rounded">${ep.path}</code>

                ${paramsHTML}
            `;

            endpointsContainer.appendChild(card);
        });
    }

    function showExample(serviceKey, index) {
        const ep = apiData[serviceKey].endpoints[index];

        exampleContent.innerHTML = `
            <h3 class="font-semibold text-lg">${ep.title}</h3>

            <p class="text-sm text-slate-500">Contoh Request:</p>

            <div class="relative">
                <pre class="bg-slate-900 text-white p-4 rounded-lg overflow-x-auto text-sm">
<code id="example-code">${ep.example}</code>
                </pre>
                <button onclick="copyCode()" 
                    class="absolute top-2 right-2 bg-sky-600 hover:bg-sky-500 px-3 py-1 text-xs text-white rounded">
                    Salin
                </button>
            </div>
        `;
    }

    function copyCode() {
        const t = document.getElementById("example-code").innerText;
        navigator.clipboard.writeText(t);
        showToast("Berhasil disalin!");
    }

    function switchService(key) {
        currentService = key;
        renderNav();
        renderEndpoints();
        showExample(currentService, 0);
    }

    // Loading Screen Fade Out
    window.onload = function () {
        renderNav();
        renderEndpoints();
        showExample(currentService, 0);

        const loader = document.getElementById("loading-screen");
        setTimeout(() => {
            loader.style.opacity = "0";
            setTimeout(() => loader.style.display = "none", 500);
        }, 400);
    };
</script>

</body>
</html>
